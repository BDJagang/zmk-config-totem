#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/ext_power.h>
#include <dt-bindings/zmk/keys.h>

#define ZMK_POINTING_DEFAULT_MOVE_VAL 2000 
#define ZMK_POINTING_DEFAULT_SCRL_VAL 20

#include <dt-bindings/zmk/pointing.h>

#define Base        0
#define Media       1
#define Nav         2
#define Mouse       3
#define Sym         4
#define Num         5
#define Fun         6
#define Button      7
#define Game        8
#define Gameplus    9

&mt {
    quick-tap-ms = <100>;
    global-quick-tap;
    flavor = "tap-preferred";
    tapping-term-ms = <170>;
};

&lt {
    tapping-term-ms = <240>;
    flavor = "balanced";
    quick-tap-ms = <150>;
};

/ {
    behaviors {
        hm: homerow_mods {
            compatible = "zmk,behavior-hold-tap";
            label = "HOMEROW_MODS";
            #binding-cells = <2>;
            flavor = "tap-preferred";
            tapping-term-ms = <200>;
            quick-tap-ms = <125>;
            global-quick-tap;
            bindings = <&kp>, <&kp>;
        };
    };

    combos {
        compatible = "zmk,combos";

        mousey {
            bindings = <&tog 3>;
            key-positions = <13 16>;
        };

        caps {
            bindings = <&kp CAPSLOCK>;
            key-positions = <35 34>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        Base {
            label = "Base";
            bindings = <
           &kp Q  &kp W       &kp E             &kp R         &kp T            &kp Y      &kp U        &kp I        &kp O       &kp P
           &kp A  &hm LALT S  &hm LCTRL D       &hm LSHIFT F  &kp G            &lt 3 H    &hm RSHFT J  &hm RCTRL K  &hm RALT L  &hm RGUI SEMICOLON
&lt 3 DEL  &kp Z  &kp X       &kp C             &kp V         &kp B            &kp N      &kp M        &kp COMMA    &kp DOT     &kp SLASH           &lt 4 APOSTROPHE
                              &mt LCTRL ESCAPE  &lt 1 TAB     &kp BACKSPACE    &kp SPACE  &lt 2 ENTER  &kp MINUS
            >;
        };

        Nav {
            label = "Nav";
            bindings = <
              &trans          &kp HOME   &kp UP_ARROW  &kp END    &kp LBRC    &kp RBRC  &kp NUMBER_7   &kp NUMBER_8  &kp NUMBER_9  &kp EQUAL
              &kp LEFT_SHIFT  &kp LEFT   &kp DOWN      &kp RIGHT  &kp LBKT    &kp RBKT  &kp NUMBER_4   &kp NUMBER_5  &kp NUMBER_6  &kp LEFT_SHIFT
&kp LEFT_ALT  &trans          &kp LC(X)  &kp LC(C)     &kp LC(V)  &kp LPAR    &kp RPAR  &kp NUMBER_1   &kp NUMBER_2  &kp NUMBER_3  &kp KP_MULTIPLY  &trans
                                         &trans        &trans     &trans      &trans    &kp RIGHT_ALT  &kp NUMBER_0
            >;
        };

        Sym {
            label = "Sym";
            bindings = <
           &kp EXCL   &kp AT  &kp HASH  &kp DOLLAR  &kp PERCENT    &kp CARET  &kp AMPERSAND  &kp KP_ASTERISK  &kp UNDERSCORE  &kp EQUAL
           &trans     &trans  &trans    &trans      &trans         &trans     &trans         &trans           &trans          &trans
&kp TILDE  &kp GRAVE  &trans  &trans    &trans      &trans         &trans     &trans         &trans           &trans          &kp QUESTION  &kp HOME
                              &trans    &trans      &trans         &trans     &trans         &trans
            >;
        };

        mouse {
            label = "mouse";
            bindings = <
          &trans    &msc SCRL_LEFT  &mmv MOVE_UP    &msc SCRL_RIGHT  &msc SCRL_UP      &trans     &trans     &trans     &trans  &trans
          &trans    &mmv MOVE_LEFT  &mmv MOVE_DOWN  &mmv MOVE_RIGHT  &msc SCRL_DOWN    &trans     &trans     &trans     &trans  &trans
&mkp MB4  &mkp MB5  &kp LC(X)       &kp LC(C)       &kp LC(V)        &trans            &trans     &trans     &trans     &trans  &trans  &tog 3
                                    &trans          &trans           &trans            &mkp LCLK  &mkp RCLK  &mkp MCLK
            >;
        };

        Button {
            label = "Button";
            bindings = <
             &bt BT_CLR         &trans    &trans     &trans      &bt BT_SEL 0    &trans        &trans            &trans      &bootloader  &trans
             &kp LGUI           &kp LALT  &kp LCTRL  &kp LSHIFT  &bt BT_SEL 1    &trans        &kp RSHIFT        &kp RCTRL   &kp RALT     &kp RGUI
&bootloader  &ext_power EP_TOG  &trans    &trans     &trans      &bt BT_SEL 2    &kp C_VOL_DN  &kp C_VOLUME_UP   &trans      &trans       &trans    &trans
                                          &trans     &trans      &trans          &kp C_PREV    &kp C_PLAY_PAUSE  &kp C_NEXT
            >;
        };
    };
};
